@model WebBanThucAnNhanh.Models.MONAN

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/NhanVien/Views/Shared/_Layout.cshtml";
}

<h2 style="padding-left: 20px;font-weight:600;">THÊM MÓN ĂN</h2>
<style>
    .field-validation-error {
        color: red;
    }
</style>

@using (Html.BeginForm("Create", "MonAn", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
<div class="form-horizontal" style="padding-left:20px">
    <hr />

    @if (ViewBag.ErrorLogin != null)
    {
        <p>@ViewBag.ErrorLogin</p>
    }

    @Html.ValidationSummary(true, "", new { @class       = "text-danger" })
    <div class="form-group">
        MÃ MÓN ĂN
        <div class="col-md-10">
            @Html.EditorFor(model => model.MAMONAN, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MAMONAN, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        TÊN MÓN ĂN
        <div class="col-md-10">
            @Html.EditorFor(model => model.TENMONAN, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TENMONAN, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        HÌNH ẢNH
        <div class="col-md-10">
            <img src="@Url.Content(Model.HINHANH)" style="height:200px; width:200px; margin:10px;" id="previewImg" />
            <input type="file" name="UploadImage" onchange="ChangeImage(this, document.getElementById('previewImg'))" />
        </div>
    </div>

    <div class="form-group">
        ĐƠN VỊ TÍNH
        <div class="col-md-10">
            @{Html.RenderAction("SelectUnit", "MonAn");}
            @Html.ValidationMessageFor(model => model.MADONVITINH, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        GIÁ
        <div class="col-md-10">
            @Html.EditorFor(model => model.GIABAN, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.GIABAN, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        MÔ TẢ
        <div class="col-md-10">
            @Html.EditorFor(model => model.MOTA, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.MOTA, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        LOẠI
        <div class="col-md-10">
            @{Html.RenderAction("SelectFood", "MonAn");}
            @Html.ValidationMessageFor(model => model.MALOAI, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        SỐ LƯỢNG
        <div class="col-md-10">
            @Html.EditorFor(model => model.SOLUONG, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.SOLUONG, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        TRẠNG THÁI
        <div class="col-md-10">
            @Html.EditorFor(model => model.STATUS, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.STATUS, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
